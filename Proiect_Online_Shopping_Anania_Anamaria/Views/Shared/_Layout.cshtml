
@using Proiect_Online_Shopping_Anania_Anamaria.Models.HOME;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="logo">
                    <h1><a href="#">Online <span>Shopping Store</span></a></h1>
                    <p>Mobilov</p>
                </div>
            </div>
            
            @*<div class="col-md-6 col-sm-6 col-xs-6">
                <div class="account">
                    <ul>
                        <li>
                            <div class="hidden-xs">
                                <h4><a>Call</a></h4>
                                <p>0231-000-001</p>
                            </div>
                            <div class="visible-xs">
                                
                                <p>0231-000-001</p>
                            </div>

                        </li>
                    </ul>
                </div>
            </div>*@
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">Cart<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        @if (Session["cart"] != null)
                        {
                            foreach (Item item in (List<Item>)Session["cart"])
                            {
                                <li>
                        <a href="@Url.Action("RemoveFromCart","Home",new { ProductId=item.Product.ProductId})">@item.Product.ProductName (@item.Quantity)<i class="fa fa-times"></i></a>
                                </li>
                            }
                        }


                        <li class="divider"></li>
                        <li><a href="../Home/Checkout">Checkout >></a></li>

                    </ul>
                </li>

            </ul>
            </div>
        
            <div class="row">
                <div class="col-md-12"
                     <div class="menu">
                         <ul class="nav nav-pills">
                             <li class="active"><a style="border-radius:initial;" href="../Home">Home</a></li>
                             <li ><a style="border-radius:initial;" href="#">Location</a></li>
                             <li ><a  style="border-radius:initial;" href="#">About</a></li>
                
                         </ul>
                         <p></p>
                     </div>
            </div>
       
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mobilov</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
